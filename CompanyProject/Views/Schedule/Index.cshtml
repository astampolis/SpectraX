@model CompanyProject.Models.ScheduleOverviewViewModel

@{
    ViewData["Title"] = "Schedule overview";
    var hasData = Model.Days.Any(x => x.Shifts.Any());
}

<div class="container mt-3">
    <h2 class="mb-3">Schedule overview</h2>

    <form method="get" class="card card-body mb-4">
        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label asp-for="SelectedUserId" class="form-label">User</label>
                <select asp-for="SelectedUserId" asp-items="Model.Users" class="form-select">
                    <option value="">All users</option>
                </select>
            </div>
            <div class="col-md-3">
                <label asp-for="SelectedDepartment" class="form-label">Department</label>
                <select asp-for="SelectedDepartment" asp-items="Model.Departments" class="form-select">
                    <option value="">All departments</option>
                </select>
            </div>
            <div class="col-md-2">
                <label asp-for="DateFrom" class="form-label"></label>
                <input asp-for="DateFrom" class="form-control" />
            </div>
            <div class="col-md-2">
                <label asp-for="DateTo" class="form-label"></label>
                <input asp-for="DateTo" class="form-control" />
            </div>
            <div class="col-md-2">
                <label asp-for="ViewMode" class="form-label">View</label>
                <select asp-for="ViewMode" class="form-select">
                    <option value="Calendar">Calendar</option>
                    <option value="Table">Table</option>
                </select>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-dark">Apply filters</button>
            </div>
        </div>
    </form>

    @if (!hasData)
    {
        <div class="alert alert-info">No shifts found for selected filters.</div>
    }
    else if (Model.ViewMode == "Table")
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>User</th>
                        <th>Department</th>
                        <th>Shift</th>
                        <th>Time</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var day in Model.Days.Where(x => x.Shifts.Any()))
                    {
                        foreach (var shift in day.Shifts)
                        {
                            <tr>
                                <td>@day.Date.ToString("yyyy-MM-dd")</td>
                                <td>@shift.EmployeeName</td>
                                <td>@(string.IsNullOrWhiteSpace(shift.Department) ? "-" : shift.Department)</td>
                                <td>@shift.ShiftName</td>
                                <td>@shift.Start.ToString("HH:mm") - @shift.End.ToString("HH:mm")</td>
                                <td>@shift.Description</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var day in Model.Days)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-header fw-bold">@day.Date.ToString("ddd, yyyy-MM-dd")</div>
                        <div class="card-body">
                            @if (!day.Shifts.Any())
                            {
                                <span class="text-muted">No shifts</span>
                            }
                            else
                            {
                                <ul class="list-group list-group-flush">
                                    @foreach (var shift in day.Shifts)
                                    {
                                        <li class="list-group-item px-0">
                                            <div class="fw-bold">@shift.ShiftName</div>
                                            <div>@shift.EmployeeName (@(string.IsNullOrWhiteSpace(shift.Department) ? "No department" : shift.Department))</div>
                                            <small class="text-muted">@shift.Start.ToString("HH:mm") - @shift.End.ToString("HH:mm")</small>
                                        </li>
                                    }
                                </ul>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
