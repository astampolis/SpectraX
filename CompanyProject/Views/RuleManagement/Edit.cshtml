@model CompanyProject.ViewModels.Rules.SystemRuleEditViewModel
<h2>Edit Rule</h2>
<form method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="RowVersionBase64" />
    <div class="mb-2"><label asp-for="Name"></label><input asp-for="Name" class="form-control" /></div>
    <div class="mb-2"><label asp-for="Code"></label><input asp-for="Code" class="form-control" /></div>
    <div class="form-check mb-2"><input asp-for="IsEnabled" class="form-check-input" /><label asp-for="IsEnabled" class="form-check-label"></label></div>
    <div class="mb-2"><label asp-for="ValueJson"></label><textarea asp-for="ValueJson" class="form-control" rows="6"></textarea></div>
    <button class="btn btn-primary">Save</button>
</form>
