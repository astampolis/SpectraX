@model CompanyProject.Models.IoTDeviceViewModel

@{
    ViewData["Title"] = "Add IoT Device";
}

<div class="container py-4">
    <h2 class="fw-bold mb-3">Add IoT Device</h2>

    <form asp-action="AddDevice" method="post" class="card shadow-sm p-4">
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Location" class="form-label"></label>
                <input asp-for="Location" class="form-control" />
            </div>
            <div class="col-md-4">
                <label asp-for="Status" class="form-label"></label>
                <input asp-for="Status" class="form-control" placeholder="Online" />
            </div>
            <div class="col-md-4">
                <label asp-for="FirmwareVersion" class="form-label"></label>
                <input asp-for="FirmwareVersion" class="form-control" />
            </div>
            <div class="col-md-4">
                <label asp-for="LastSeen" class="form-label"></label>
                <input asp-for="LastSeen" class="form-control" type="datetime-local" />
            </div>
        </div>

        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-primary">Save Device</button>
            <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>
