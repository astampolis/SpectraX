@model CompanyProject.Models.EnergyReadingViewModel

@{
    ViewData["Title"] = "Add Energy Reading";
}

<div class="container py-4">
    <h2 class="fw-bold mb-3">Add Energy Reading</h2>

    <form asp-action="AddReading" method="post" class="card shadow-sm p-4">
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="IoTDeviceId" class="form-label"></label>
                <select asp-for="IoTDeviceId" class="form-select" asp-items="ViewBag.Devices"></select>
                <span asp-validation-for="IoTDeviceId" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Timestamp" class="form-label"></label>
                <input asp-for="Timestamp" class="form-control" type="datetime-local" />
            </div>
            <div class="col-md-3">
                <label asp-for="PowerWatts" class="form-label"></label>
                <input asp-for="PowerWatts" class="form-control" />
            </div>
            <div class="col-md-3">
                <label asp-for="Voltage" class="form-label"></label>
                <input asp-for="Voltage" class="form-control" />
            </div>
            <div class="col-md-3">
                <label asp-for="CurrentAmps" class="form-label"></label>
                <input asp-for="CurrentAmps" class="form-control" />
            </div>
            <div class="col-md-3">
                <label asp-for="EnergyKwh" class="form-label"></label>
                <input asp-for="EnergyKwh" class="form-control" />
            </div>
        </div>

        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-primary">Save Reading</button>
            <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>
