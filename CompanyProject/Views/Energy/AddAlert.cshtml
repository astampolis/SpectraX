@model CompanyProject.Models.EnergyAlertViewModel

@{
    ViewData["Title"] = "Add Energy Alert";
}

<div class="container py-4">
    <h2 class="fw-bold mb-3">Add Energy Alert</h2>

    <form asp-action="AddAlert" method="post" class="card shadow-sm p-4">
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="IoTDeviceId" class="form-label"></label>
                <select asp-for="IoTDeviceId" class="form-select" asp-items="ViewBag.Devices"></select>
                <span asp-validation-for="IoTDeviceId" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Severity" class="form-label"></label>
                <select asp-for="Severity" class="form-select">
                    <option value="Low">Low</option>
                    <option value="Medium">Medium</option>
                    <option value="High">High</option>
                </select>
            </div>
            <div class="col-md-12">
                <label asp-for="Message" class="form-label"></label>
                <textarea asp-for="Message" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="TriggeredAt" class="form-label"></label>
                <input asp-for="TriggeredAt" class="form-control" type="datetime-local" />
            </div>
            <div class="col-md-6 d-flex align-items-center">
                <div class="form-check mt-4">
                    <input asp-for="Acknowledged" class="form-check-input" />
                    <label asp-for="Acknowledged" class="form-check-label"></label>
                </div>
            </div>
        </div>

        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-danger">Save Alert</button>
            <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>
