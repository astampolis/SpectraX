@model CompanyProject.Models.LeaveViewModel
@{
    var leaveTypes = ViewBag.LeaveTypes as IEnumerable<CompanyProject.Data.Models.LeaveType> ?? Enumerable.Empty<CompanyProject.Data.Models.LeaveType>();
}
<h2>Request leave</h2>
<form method="post">
    <div class="mb-3"><label asp-for="LeaveDescription"></label><input class="form-control" asp-for="LeaveDescription" /></div>
    <div class="mb-3"><label asp-for="LeaveTypeId"></label><select asp-for="LeaveTypeId" class="form-select"><option value="">Select type</option>@foreach (var lt in leaveTypes){<option value="@lt.Id">@lt.Name (@(lt.IsPaid ? "Paid" : "Unpaid"))</option>}</select></div>
    <div class="mb-3"><label asp-for="LeaveStart"></label><input class="form-control" asp-for="LeaveStart" /></div>
    <div class="mb-3"><label asp-for="LeaveEnd"></label><input class="form-control" asp-for="LeaveEnd" /></div>
    <div class="mb-3"><label asp-for="Comment"></label><textarea asp-for="Comment" class="form-control"></textarea></div>
    <button class="btn btn-primary">Submit for approval</button>
</form>
