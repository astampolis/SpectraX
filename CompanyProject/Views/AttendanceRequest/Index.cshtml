@model IEnumerable<CompanyProject.Data.Models.AttendanceRequest>
<h2>Attendance Requests</h2>
<table class="table">
<thead><tr><th>Employee</th><th>Date</th><th>Type</th><th>Status</th><th>Reason</th></tr></thead>
<tbody>
@foreach (var item in Model)
{
<tr>
<td>@item.Employee?.Email</td>
<td>@item.RequestedForDate.ToString("yyyy-MM-dd")</td>
<td>@item.Type</td>
<td>@item.Status</td>
<td>@item.Reason</td>
</tr>
}
</tbody>
</table>
