@model IEnumerable<CompanyProject.Data.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}

<link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

<section>
    <div class="container">
        <div class="row py-5">
            <div class="text-center">
                <h1 class="fw-light fw-bold">Employee List</h1>
                <p class="text-muted">Manage users and quickly search by basic profile data.</p>
            </div>
        </div>
        <form asp-controller="Home" asp-action="Employees" method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label for="Name" class="form-label">Name</label>
                <input id="Name" type="text" class="form-control" name="Name" value="@Context.Request.Query["Name"]" />
            </div>
            <div class="col-md-4">
                <label for="Surname" class="form-label">Surname</label>
                <input id="Surname" type="text" class="form-control" name="Surname" value="@Context.Request.Query["Surname"]" />
            </div>
            <div class="col-md-4 d-flex gap-2">
                <input class="btn btn-dark" type="submit" value="Filter" />
                <a class="btn btn-outline-secondary" asp-action="Employees">Clear</a>
            </div>
        </form>

        <div class="d-flex flex-wrap gap-2 mt-4 mb-2">
            <a class="btn btn-dark" asp-area="" asp-controller="Home" asp-action="AddEmployee"><i class="bi bi-person-plus-fill"></i> Add Employee</a>
            <a class="btn btn-outline-dark" asp-area="Identity" asp-page="/Account/Register"><i class="bi bi-shield-plus"></i> Create Account (Admin)</a>
        </div>
    </div>
</section>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm p-4 h-100">
                        <div class="banner"></div>
                        @if (item.Image != null)
                        {
                            <img class="img-circle mx-auto mb-3" src="data:image/png;base64, @Html.DisplayFor(modelItem => item.Image)" alt="user-image" />
                        }
                        else
                        {
                            <img class="img-circle mx-auto mb-3" src="/img/employee_default.png" alt="user-image" />
                        }

                        <h3 class="mb-4 text-center">
                            @Html.DisplayFor(modelItem => item.Surname) @Html.DisplayFor(modelItem => item.Name)
                        </h3>
                        <div class="card-body ps-4 pe-4">
                            <div class="mb-4">
                                <p class="mb-2">
                                    <i class="bi bi-envelope-fill pe-1"></i>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </p>
                                <p class="mb-2">
                                    <i class="bi bi-person-circle pe-1"></i>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </p>
                                <p class="mb-2">
                                    <i class="bi bi-calendar pe-1"></i>
                                    @(item.Birth?.ToString("d") ?? "-")
                                </p>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group d-flex justify-content-center">
                                    <a asp-action="EditEmployee" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-primary">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-secondary">Details</a>
                                    <a asp-action="DeleteUser" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-danger">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
