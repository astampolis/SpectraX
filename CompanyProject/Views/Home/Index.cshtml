@{
    ViewData["Title"] = "Home Page";
}

<main>
    <section>
        <div class="home">
            <div class="container-fluid h-100 d-flex flex-column justify-content-center align-items-center text-light text-center">
                <p class="display-1">SpectraX</p>
                <p class="welcome-text mb-3">The business operations platform for modern teams</p>
                <p class="lead mb-5 px-3" style="max-width: 860px;">
                    Unify workforce management, project delivery, and energy intelligence in one secure system built to improve productivity, visibility, and decision speed.
                </p>
                <a class="btn btn-outline-light" href="#aboutus">Explore the platform</a>
                <div class="hero-shadow">
                </div>
            </div>
        </div>
    </section>
    <section>
        <div id="aboutus" class="container py-5">
            <div class="row text-center">
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="aboutus-box m-3 p-4 p-lg-5 border text-dark">
                        <h3>Operational Excellence</h3>
                        <i class="bi bi-graph-up-arrow aboutus-icon"></i>
                        <p>Standardize workflows across departments and reduce manual overhead with reliable, repeatable processes.</p>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="aboutus-box m-3 p-4 p-lg-5 border text-light bg-dark">
                        <h3>Workforce Visibility</h3>
                        <i class="bi bi-people-fill aboutus-icon"></i>
                        <p>Track employees, leaves, and timesheets in real time so managers can make faster, data-backed decisions.</p>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="aboutus-box m-3 p-4 p-lg-5 border text-dark">
                        <h3>Connected Systems</h3>
                        <i class="bi bi-hdd-stack-fill aboutus-icon"></i>
                        <p>Integrate task management and IoT monitoring into one source of truth that scales with your business.</p>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="aboutus-box m-3 p-4 p-lg-5 border text-light bg-dark">
                        <h3>Measurable ROI</h3>
                        <i class="bi bi-currency-dollar aboutus-icon"></i>
                        <p>Identify bottlenecks early, optimize resource allocation, and improve cost efficiency across operations.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container py-5 text-center">
            <p class="display-3 text-uppercase mb-0">Program Highlights</p>
            <p class="py-4" style="max-width: 980px; margin: 0 auto;">
                SpectraX is designed as a complete business program, not just a dashboard. It connects your HR, operations, and sustainability goals with practical tools that teams can adopt quickly and leadership can trust.
            </p>
            <div class="row row-cols-1 row-cols-md-2 row-cols-xl-4 g-4 text-start">
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">People & HR Management</h5>
                            <p class="card-text">Manage employee records, approvals, and leave flows with full accountability and clear approval trails.</p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Productivity & Delivery</h5>
                            <p class="card-text">Coordinate tasks, monitor workload, and keep projects on track with transparent status updates for every stakeholder.</p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Energy Intelligence</h5>
                            <p class="card-text">Capture IoT energy readings, trigger alerts, and reduce waste with actionable insights for sustainable growth.</p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Leadership Reporting</h5>
                            <p class="card-text">Convert daily activity into executive-level insights that support planning, forecasting, and strategic investment.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="contact" class="contact bg-dark text-light py-5">
        <div class="container text-center py-5">
            <p class="display-3 pb-lg-5 text-uppercase">
                Contact Us
            </p>
            <div class="row">
                <div class="col-lg-9 my-5 m-lg-0">
                    <form>
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Name and surname">
                        </div>
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Business email address">
                        </div>
                        <div class="input-group mb-3">
                            <textarea rows="6" class="form-control" placeholder="Tell us about your business goals"></textarea>
                        </div>
                        <input type="submit" value="Send" class="btn btn-light px-4 py-2 submit-btn">
                    </form>
                </div>
                <div class="col-lg-3 mt-4 m-lg-0 contact-info">
                    <h3>Address:</h3>
                    <p class="orange-color">SpectraX Business Platform</p>
                    <p><i class="bi bi-geo-alt"></i> 623 Harrison St., 2nd Floor, <br> San Francisco, CA 94107</p>
                    <p><i class="bi bi-phone"></i> 415-201-6370</p>
                    <p><i class="bi bi-at"></i> contact@spectrax.com</p>
                </div>
            </div>
        </div>
    </section>
</main>

<footer class="bg-dark text-light border-top">
    <div class="text-center py-5 mb-0">
        Copyright &copy; <span class="year">2022</span> by SpectraX Business Platform, Inc. All rights reserved.
    </div>
</footer>
